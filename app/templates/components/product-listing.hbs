{{#unless selected}}
  <div {{action "expandProduct"}}>
    {{lazy-image url=product.image alt=product.name class="products-index-img"}}
    <div class="products-index-text-wrapper">
      <div class="products-index-heading">{{product.name}}</div>
      <div class="products-index-description">{{product.sdescription}}</div>
    </div>
  </div>
{{else}}
  <div id="productExpanded" {{action "expandProduct"}}>
    {{custom-light-box class="productExpandedImage" href=product.largeimg data-lightbox="product" data-title=product.name }}
    <div id="productsExpandedBody"><span id="productExpandedHeading">{{product.name}}</span><div>{{product.description}}</div></div>
  </div>
{{/unless}}

